<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="721dp"
        android:padding="15dp">


        <ImageView
            android:id="@+id/book_user_view_image"
            android:layout_width="220dp"
            android:layout_height="191dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="101dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/book_user_view_name"
            android:layout_width="307dp"
            android:layout_height="35dp"
            android:layout_below="@+id/book_user_view_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="47dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/book_user_view_author"
            android:layout_width="307dp"
            android:layout_height="35dp"
            android:layout_below="@+id/book_user_view_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="44dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/book_user_view_stream"
            android:layout_width="307dp"
            android:layout_height="35dp"
            android:layout_below="@+id/book_user_view_author"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="43dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/book_user_view_description"
            android:layout_width="307dp"
            android:layout_height="165dp"
            android:layout_below="@+id/book_user_view_stream"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="37dp"
            android:text="TextView" />

        <Button
            android:id="@+id/book_view_back"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_user_view_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="86dp"
            android:text="Back" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>